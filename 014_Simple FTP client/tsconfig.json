{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "target": "es2018",
        "allowJs": false,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "types": ["node"]
    },
    "include": [
        "./src/**/*"
    ]
}